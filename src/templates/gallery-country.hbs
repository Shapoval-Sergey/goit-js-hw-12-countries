{{#each this}}
  <li>
    <h2>{{name}}</h2>
    <img src="{{flag}}" alt="" width="480">
    <article>
        <p>Capital: {{capital}}</p>
        <p>Population: {{population}}</p>
        <ul>
          {{#each languages}}
            <li class="tag-list__item">{{this}}</li>
          {{/each}}
        </ul>
    </article>
  </li>
{{/each}}